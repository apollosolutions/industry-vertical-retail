  },
  "dependencies": {
    "@apollo/gateway": "^2.1.1",
    "@apollo/subgraph": "^2.1.1",
    "apollo-server": "^3.10.2",
    "graphql": "^16.6.0"
  },
  "devDependencies": {
    "concurrently": "^7.3.0",
    "dotenv": "^16.0.1",
    "nodemon": "^2.0.19",
    "wait-on": "^6.0.1"
  }
}
