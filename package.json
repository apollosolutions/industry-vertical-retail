{
  "name": "industry-vertical-retail",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "concurrently -k npm:server:*",
    "server:orders": "nodemon ./services/orders/index.js",
    "server:products": "nodemon ./services/products/index.js",
